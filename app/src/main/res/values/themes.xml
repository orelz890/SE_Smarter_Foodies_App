<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Smarter_Foodies" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorBlack</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColorSecondary">@color/black</item>

    </style>

    <style name="Theme.Smarter_Foodies.BackgroundImageStyle">
        <item name="android:windowBackground">@drawable/add_recipe_background</item>
    </style>

    <style name="Theme.Smarter_Foodies.BackgroundUpdateImageStyle">
        <item name="android:windowBackground">@drawable/update_background_image</item>
    </style>

    <style name="Theme.Smarter_Foodies.NavigationDrawer">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="Theme.Smarter_Foodies.ToolbarColoredBackArrow">
        <item name="android:textColorSecondary">@color/black</item>
    </style>


</resources>